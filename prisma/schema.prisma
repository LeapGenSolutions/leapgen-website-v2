
// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
    output = "/home/ubuntu/leapgen_improved/node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Contact {
  id          String   @id @default(cuid())
  fullName    String
  email       String
  phone       String?
  company     String?
  industry    String?
  message     String
  formType    String   @default("general") // general, demo, consultation
  status      String   @default("new") // new, contacted, qualified, closed
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("contacts")
}

model Resource {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String
  content     String
  type        String   // case-study, whitepaper, blog-post
  industry    String?  // healthcare, financial, retail, etc.
  product     String?  // surroundai, datacoffee, seismic
  imageUrl    String?
  downloadUrl String?
  published   Boolean  @default(true)
  featured    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("resources")
}

model Testimonial {
  id          String   @id @default(cuid())
  name        String
  title       String
  company     String
  industry    String?
  product     String?  // which product they used
  quote       String
  rating      Int      @default(5)
  imageUrl    String?
  featured    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("testimonials")
}

model CaseStudy {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  company     String
  industry    String
  product     String   // surroundai, datacoffee, seismic
  challenge   String
  solution    String
  results     String
  metrics     Json     // key metrics like cost reduction, time savings
  imageUrl    String?
  published   Boolean  @default(true)
  featured    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("case_studies")
}
